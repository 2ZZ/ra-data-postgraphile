{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "module": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.test.js"],
  "include": ["src"]
}
